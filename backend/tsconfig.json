{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "CommonJS",
    "target": "ES6",
    "strict": false,
    "noEmitOnError": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["node", "express", "multer"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
